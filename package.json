{
  "name": "double-agent",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "dev:full": "bun run build:web && bun run --watch src/index.ts",
    "build": "bun run build:web && bun run build:server",
    "build:web": "cd web && bun run build",
    "build:server": "bun build src/index.ts --outdir dist --target bun",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "bun test",
    "test:server": "bun run dev & sleep 3 && echo 'Testing server...' && curl -s http://0.0.0.0:3000/health && pkill -f 'bun.*index.ts'"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/bun": "latest",
    "@types/node": "^25.2.2",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.54.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "better-sse": "^0.16.1",
    "jose": "^6.1.3",
    "zod": "^4.3.6"
  }
}
